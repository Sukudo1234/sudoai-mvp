# Terraform Environment Variables
# Copy to .env and fill in actual values

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCOUNT_ID=your-aws-account-id

# Terraform Backend (if using remote state)
TF_VAR_terraform_state_bucket=your-terraform-state-bucket
TF_VAR_terraform_state_key=sudoai-mvp/terraform.tfstate
TF_VAR_terraform_state_region=ap-south-1

# Project Configuration
TF_VAR_project_name=sudoai-mvp
TF_VAR_environment=prod

# GitHub Configuration (for OIDC)
TF_VAR_github_org=Sukudo1234
TF_VAR_github_repo=sudoai-mvp

# Optional: Custom instance types if needed
# TF_VAR_cpu_instance_types='["c7i.large", "c6i.large"]'
# TF_VAR_gpu_instance_types='["g5.xlarge", "g4dn.xlarge"]'
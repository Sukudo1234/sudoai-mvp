# Environment Configuration
# Copy to .env and fill in actual values

# Environment Mode (local or production)
ENVIRONMENT=local

# ===== LOCAL DEVELOPMENT CONFIGURATION =====

# MinIO Configuration (Local S3-compatible storage)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_REGION=us-east-1
MINIO_UPLOADS_BUCKET=uploads
MINIO_RESULTS_BUCKET=results

# TUS Upload Server (Local resumable uploads)
TUSD_PUBLIC_URL=http://localhost:8080
TUSD_INTERNAL_URL=http://tusd:1080

# Redis Configuration (Local queue/cache)
REDIS_URL=redis://redis:6379/0

# Database Configuration (Local SQLite)
DATABASE_URL=sqlite:///./sudoai_local.db

# ===== PRODUCTION CONFIGURATION =====

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCOUNT_ID=your-aws-account-id
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 Storage Configuration
AWS_S3_BUCKET_RAW=sudoai-mvp-prod-raw-abc123
AWS_S3_BUCKET_OUT=sudoai-mvp-prod-out-abc123

# SQS Queue Configuration
AWS_SQS_QUEUE_URL=https://sqs.ap-south-1.amazonaws.com/123456789012/sudoai-mvp-prod-jobs

# AWS Batch Configuration
AWS_BATCH_CPU_QUEUE=sudoai-mvp-prod-cpu-queue
AWS_BATCH_GPU_QUEUE=sudoai-mvp-prod-gpu-queue
AWS_BATCH_CPU_JOB_DEFINITION=sudoai-mvp-prod-cpu-job-def
AWS_BATCH_GPU_JOB_DEFINITION=sudoai-mvp-prod-gpu-job-def

# ECR Repository
AWS_ECR_REPO_WORKER=123456789012.dkr.ecr.ap-south-1.amazonaws.com/sudoai-mvp-prod-worker

# Database Configuration (Production PostgreSQL)
DATABASE_URL=postgresql://postgres:password@sudoai-mvp-prod-cluster.cluster-abc123.ap-south-1.rds.amazonaws.com:5432/sudoai

# ===== SHARED CONFIGURATION =====

# ElevenLabs Transcription (Optional)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_TRANSCRIBE_URL=https://api.elevenlabs.io/v1/speech-to-text
ELEVENLABS_LANGUAGE=auto
ELEVENLABS_OUTPUT_FORMAT=srt

# Logging Configuration
LOG_LEVEL=INFO

# Feature Flags
ENABLE_GPU_PROCESSING=true
ENABLE_TRANSFER_ACCELERATION=true
ENABLE_BATCH_PROCESSING=true
# ====== Core ======
ENV=dev

# Public URLs (what your Next.js client will call)
PUBLIC_API_URL=http://localhost:8000
PUBLIC_TUSD_URL=http://localhost:8080

# Internal URLs (within docker network)
REDIS_URL=redis://redis:6379/0
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_REGION=us-east-1
MINIO_RESULTS_BUCKET=results

# tusd (resumable uploads)
TUSD_INTERNAL_URL=http://tusd:1080
TUSD_PUBLIC_URL=http://localhost:8080

# ElevenLabs (fill these)
ELEVENLABS_API_KEY=REPLACE_ME
ELEVENLABS_TRANSCRIBE_URL=REPLACE_ME    # e.g., https://api.elevenlabs.io/v1/speech-to-text
ELEVENLABS_LANGUAGE=auto
ELEVENLABS_OUTPUT_FORMAT=srt

# Runtime
LOG_LEVEL=INFO
